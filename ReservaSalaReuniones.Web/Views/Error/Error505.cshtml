@using ReservaSalaReuniones.Web.ModelView.BreadCrums
@{
    ViewData["BreadCrums"] = new BreadCrums(new BreadCrum("Inicio", "Index", "Index"), new BreadCrum("Error 500"));
    ViewData["Title"] = "Error 500";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Back"] = "1";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger">500</h2>

        <div class="error-content">
            <h3>
                <i class="fas fa-exclamation-triangle text-danger"></i>
                ¡Upss! Algo salió mal.
            </h3>
            <p>
                Trabajaremos para solucionarlo de inmediato.
                Mientras tanto, puede regresar a <a href="@Url.Action("Index","Index")">la página principal</a>.
            </p>
        </div>
    </div>
    <!-- /.error-page -->

</section>

