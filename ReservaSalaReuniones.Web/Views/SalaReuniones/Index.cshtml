@using ReservaSalaReuniones.Web.ModelView.BreadCrums
@{
    ViewData["BreadCrums"] = new BreadCrums(new BreadCrum("Inicio", "Index", "Index"), new BreadCrum("Ver Salas Reuniones"));
    ViewData["Title"] = ViewBag.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Back"] = "1";
}
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Lista de Sala de reuniones</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="card-body">
                <table id="table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nombre de sala
                            </th>
                            <th>
                                Descripción
                            </th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>

        </div>

    </div>
</section>

@section css
    {
    <link href="~/lib/AdminLTE3/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE3/plugins/datatables-fixedheader/css/fixedHeader.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE3/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
    {
    <script src="~/lib/AdminLTE3/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/AdminLTE3/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/AdminLTE3/plugins/datatables-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/lib/AdminLTE3/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/AdminLTE3/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/AdminLTE3/plugins/moment/moment-with-locales.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.20/sorting/datetime-moment.js"></script>
    <script src="~/js/Salas/CargarData.js"></script>

    <script>

        $(function () {
            moment.locale('es');
            $.fn.dataTable.moment('DD/MM/YYYY');
            CargarSalas();
            new $.fn.dataTable.FixedHeader(table);
        });
    </script>

    @if (ViewBag.NotificacionTipo != null && ViewBag.NotificacionMensaje != null)
    {
        <input type="hidden" id="NotificacionTitulo" value="@ViewBag.NotificacionTitulo">
        <input type="hidden" id="NotificacionMensaje" value="@ViewBag.NotificacionMensaje">
        <script>
      VerAlertas($("#NotificacionTitulo").val(), $("#NotificacionMensaje").val(), "@ViewBag.NotificacionTipo");
        </script>
    }
}


